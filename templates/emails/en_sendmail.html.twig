{% extends 'emails/layout.html.twig' %}

{% block h1 %}Email received from E.N E-commerce API{% endblock %}
{% block content %}
    <p style="font-family: sans-serif; font-size: 16px; line-height: 1.5">
        Hello Admin,
        <br><br>
        You have received a message from <b>{{ name }}</b> ({{ emailFrom }}).
        <br><br>
        <b>Subject:</b> {{ subject }}
        <br>
        <b>Message:</b>
        <br>
        {{ message | nl2br }}
    </p>
{% endblock %}
{% block rights %}All Rights Reserved{% endblock %}
