{% extends 'emails/layout.html.twig' %}

{% block h1 %}Email reçu de E.N Shop API{% endblock %}
{% block content %}
    <p style="font-family: sans-serif; font-size: 16px; line-height: 1.5">
        Bonjour Admin,
        <br><br>
        Vous avez reçu un message de la part de <b>{{ name }}</b> ({{ emailFrom }}).
        <br><br>
        <b>Sujet :</b> {{ subject }}
        <br>
        <b>Message :</b>
        <br>
        {{ message | nl2br }}
    </p>
{% endblock %}
{% block rights %}Tous Droits Réservés{% endblock %}
