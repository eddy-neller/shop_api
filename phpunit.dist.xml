<?xml version="1.0" encoding="UTF-8"?>

<!-- https://phpunit.readthedocs.io/en/latest/configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         colors="true"
         failOnDeprecation="true"
         failOnNotice="true"
         failOnWarning="true"
         bootstrap="tests/bootstrap.php"
         cacheDirectory=".phpunit.cache"
>
    <php>
        <ini name="display_errors" value="1" />
        <ini name="error_reporting" value="-1" />
        <server name="APP_ENV" value="test" force="true" />
        <server name="SHELL_VERBOSITY" value="-1" />
    </php>

    <testsuites>
        <testsuite name="appli.user">
            <directory>application/tests/Unit/User/UseCase</directory>
            <directory>application/tests/Unit/User/Service</directory>
        </testsuite>
        <testsuite name="appli.shop">
            <directory>application/tests/Unit/Shop/UseCase</directory>
        </testsuite>

        <testsuite name="domain.shared">
            <directory>domain/SharedKernel/tests/Unit</directory>
        </testsuite>
        <testsuite name="domain.shop">
            <directory>domain/Shop/tests/Unit</directory>
        </testsuite>
        <testsuite name="domain.user">
            <directory>domain/User/tests/Unit</directory>
        </testsuite>

        <testsuite name="infra.command">
            <directory>infrastructure/tests/Unit/Command</directory>
        </testsuite>
        <testsuite name="infra.notif">
            <directory>infrastructure/tests/Unit/Notification</directory>
        </testsuite>
        <testsuite name="infra.persist">
            <directory>infrastructure/tests/Unit/Persistence</directory>
        </testsuite>
        <testsuite name="infra.service.encoder">
            <directory>infrastructure/tests/Unit/Service/Encoder</directory>
        </testsuite>
        <testsuite name="infra.service.token">
            <directory>infrastructure/tests/Unit/Service/Token</directory>
        </testsuite>
        <testsuite name="infra.service.shop">
            <directory>infrastructure/tests/Unit/Service/Shop</directory>
        </testsuite>
        <testsuite name="infra.service.user">
            <directory>infrastructure/tests/Unit/Service/User</directory>
        </testsuite>

        <testsuite name="pres.state.sendmail">
            <directory>presentation/tests/Unit/State/SendMail</directory>
        </testsuite>
        <testsuite name="pres.state.shared">
            <directory>presentation/tests/Unit/State/Shared</directory>
        </testsuite>
        <testsuite name="pres.state.shop">
            <directory>presentation/tests/Unit/State/Shop</directory>
        </testsuite>
        <testsuite name="pres.state.user">
            <directory>presentation/tests/Unit/State/User</directory>
        </testsuite>

        <testsuite name="api.shop">
            <directory>presentation/tests/Api/Shop</directory>
        </testsuite>
        <testsuite name="api.user">
            <directory>presentation/tests/Api/User</directory>
        </testsuite>
    </testsuites>

    <source ignoreSuppressionOfDeprecations="true"
            ignoreIndirectDeprecations="true"
            restrictNotices="true"
            restrictWarnings="true"
    >
        <include>
            <directory>application/src/Shop</directory>
            <directory>application/src/User</directory>
            <directory>domain/SharedKernel/src</directory>
            <directory>domain/Shop/src</directory>
            <directory>domain/User/src</directory>
            <directory>infrastructure/src</directory>
            <directory>presentation/src</directory>
            <directory>src</directory>
        </include>
        <exclude>
            <directory>application/src/Shared</directory>
            <directory>infrastructure/src/DataFixtures</directory>
            <directory>infrastructure/src/Entity</directory>
            <directory>infrastructure/src/EventListener</directory>
            <directory>infrastructure/src/EventSubscriber</directory>
            <directory>infrastructure/src/OpenApi</directory>
            <directory>infrastructure/src/Service/Helper</directory>
            <directory>presentation/src/Shared/Adapter</directory>
            <directory>presentation/src/User/Security</directory>
            <directory>src/DataFixtures</directory>
            <directory>src/Entity</directory>
        </exclude>

        <deprecationTrigger>
            <method>Doctrine\Deprecations\Deprecation::trigger</method>
            <method>Doctrine\Deprecations\Deprecation::delegateTriggerToBackend</method>
            <function>trigger_deprecation</function>
        </deprecationTrigger>
    </source>

    <extensions>
        <bootstrap class="DAMA\DoctrineTestBundle\PHPUnit\PHPUnitExtension" />
    </extensions>
</phpunit>
